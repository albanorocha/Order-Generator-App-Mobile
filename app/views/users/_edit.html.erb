<div class="authform">
  <h3 class="text-center">Edit: <small> <%= @user.name %></small>  </h3>
  <%= simple_form_for(@user, :url => user_path(@user), :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :username, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :company, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :email, class: 'form-control' %>
    </div>
    <fieldset>
      <p>Leave these fields blank if you don't want to change your password.</p>
      <div class="form-group">
        <%= f.input :password, :autocomplete => 'off', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, class: 'form-control' %>
      </div>
    </fieldset>
    <fieldset>
      <div class="form-group">
        <i>(we need your current password to confirm your changes)</i>
        <%= f.input :current_password, class: 'form-control' %>
      </div>
    </fieldset>
    <%= f.submit 'Update', :class => 'button right' %>
  <% end %>
</div>
<div class="authform">
<h3>Cancel Account</h3>
<p>Unhappy? We'll be sad to see you go.</p>
<%= button_to "Cancel my account", user_path(@user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button right' %>
</div>
