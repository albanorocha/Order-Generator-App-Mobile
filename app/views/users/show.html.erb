<br>
<div class="row">
  <div class="well col-md-4 col-md-offset-4">
    <h2 class="text-center"> <%= @user.name %> <small> <%= @user.username %> </small> </h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <table class="table table-striped">
          <tr>
            <td class="text-right"> <b> Email: </b>  </td>
            <td> <%= @user.email %> </td>
          </tr>
          <tr>
            <td class="text-right"> <b> Empresa: </b>  </td>
            <td> <%= @user.company %> </td>
          </tr>
          <tr>
            <td class="text-right"> <b> Role: </b>  </td>
            <td> <%= @user.role.humanize %> </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
