<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="well">
      <%= simple_form_for(@order ) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <div class="col-lg-6">
              <%= f.input :code, :label => "CÃ³digo" %>
            </div>
            <div class="col-lg-6">
              <%= f.association :user, :label => "Cliente", include_blank: "Selecione um Cliente" %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <%= f.input :starting_at, :label => "Emitido" %>
            </div>
            <div class="col-lg-6">
              <%= f.input :ending_at, :label => "Validade" %>
            </div>
            <div class="col-lg-6">
              <%= f.input :order_type, :collection => Order.order_types, :label_method => :first,
                :value_method => :first , :label => "Tipo" ,:include_blank => false %>
            </div>
            <div class="col-lg-2 col-lg-offset-1">
              <br>
              <%= f.input :enable %>
            </div>

            <div class="col-lg-3">
              <br>
              <%= f.input :approved %>
            </div>
          </div>
        </div>
</div>

        <div class="page-header">
          <h3>Images</h3>
        </div>
        <div class="well row">
        <div class="col-lg-12 add_images">
          <%= link_to_add_association 'Nova Imagem', f, :order_images, { class: 'btn btn-info btn-xs btn-block' } %>
        </div>
    
        <br>
        <div class="row order_images_form">
            <%= f.fields_for :order_images do |order_image| %>
              <%= render 'order_image_fields', f: order_image %>
            <% end %>
        </div>

    </div>
    <div class="page-header">
      <h3>Blocos</h3>
    </div>
        <div class="well row">
          <div class="col-md-12">
            <div id="blocks">
              <%= f.fields_for :blocks do |block| %>
                <h3>Bloco #<%= block.index+1 %></h3>
                <%= render 'block_fields', f: block %>
                <hr>
              <% end %>

              <div class="block_links">
                <%= link_to_add_association 'Novo Bloco', f, :blocks, { class: 'btn btn-primary btn-xs btn-block' } %>
              </div>
            </div>
          </div>
        </div>

        <br>

        <div class="row">
        <div class="text-center">
        <div class="form-actions">
          <hr>
          <%= f.button :submit, "Enviar" ,   class: "btn-success col-lg-12 btn-lg" %>
          <hr>
        </div>
        </div>
        </div>
      <% end %>
    
  </div>
</div>
