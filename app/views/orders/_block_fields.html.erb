<div class="nested-fields new_block">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="field">
        <%= f.input :name, placeholder: "Título do Bloco", label: false %>
      </div>
      <div class="field">
        <%= f.input :description, placeholder: "Descrição do Bloco...", label: false %>
      </div>

      <h3>Módulos</h3>

      <div class="row components_form">
        <div id="components">
          <%= f.fields_for :components do |component| %>
            <%= render 'component_fields', f: component %>
          <% end %>
          <br>
        </div>
      </div>
      <div class="row">
      <div class="col-lg-12 add_modulos">
        <%= link_to_add_association 'Novo Módulo', f, :components, { class: 'btn btn-info btn-xs btn-block ' } %>
      </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="text-right">
        <%= link_to_remove_association "Excluir Bloco", f, { class: 'btn btn-danger btn-xs' } %>
      </div>
    </div>
  </div>
</div>
